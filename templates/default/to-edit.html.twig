{% extends 'base.html.twig' %}

{% block title %}Hello {{ title }}!{% endblock %}

{% block body %}
<div class="container mt-5">
      <div class="row">
          <div class="col-sm-12">

            <h1>Editing resource with id <span class="card  w-25 bg-dark text-light">{{ id }} </span></h1>
            <p>Please type below the new values to edit</p>

            <form action="/edit-resource/{{resource.id}}" method="POST">
            <div class="form-group">
              <label for="stringInput">String</label>
              <input type="text" name="stringValue" class="form-control" aria-describedby="emailHelp" placeholder="Enter a string">
              <small id="emailHelp" class="form-text text-muted">Type sum shit</small>
            </div>
            <div class="form-group">
              <label for="numberInput">Number</label>
              <input type="number" class="form-control" name="numberInput" placeholder="enter some number">
            </div>
           
            <button type="submit" class="btn btn-dark d-block w-25">Edit resource</button>
          </form>
            <a class="btn btn-dark mt-2" href="/">Go Home</a>  

      </div>
    </div>
</div>
{% endblock %}
